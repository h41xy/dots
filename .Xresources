!##########
!# Xft settings
!##########

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

URxvt*font:                             xft:Noto Mono:pixelsize=16:antialias=true:hinting=true, \
                                        xft:DejaVu Sans Mono Book 9:pixelsize=18, \
                                        xft:Unifont:pixelsize:16, \
                                        -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
URxvt*boldFont:                         xft:Noto Mono:pixelsize=16:antialias=true:hinting=true, \
                                        xft:DejaVu Sans Mono Book 9:pixelsize=18, \
URxvt*italicFont:                       xft:Noto Mono:pixelsize=16:antialias=true:hinting=true, \
                                        xft:DejaVu Sans Mono:pixelsize=18
URxvt*boldItalicFont:                   xft:Noto Mono:pixelsize=16:antialias=true:hinting=true, \
                                        xft:DejaVu Sans Mono:pixelsize=18
!URxvt*italicFont:                       xft:Bitstream Vera Sans Mono:italic:autohint=true:pixelsize=12
!URxvt*boldItalicFont:                   xft:Bitstream Vera Sans Mono:bold:italic:autohint=true:pixelsize=12

!################
!# URXVT settings
!################

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace: 0

URxvt*saveLines:            65000

URxvt*scrollBar: false


!##########
!# Colors
!##########

URxvt*background: #2C2C2C
URxvt*foreground: #DCDCCC
! black
URxvt.color0  : #3F3F3F
